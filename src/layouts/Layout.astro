---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";

import BGC from "assets/bgc.png";
import DiscordPeek from "assets/discord-peek.png";

import { Picture } from "@astrojs/image/components";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.png",
  Astro.site,
).toString();

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" sizes="192x192" href="/favicon.png" />
    <link rel="icon" sizes="32x32" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={title}
      description="A toolkit that helps compile a selection of the latest computer diagnostic and recovery tools."
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Medicat - Computer Diagnostic and Recovery Toolkit`,
          description: "A toolkit that helps compile a selection of the latest computer diagnostic and recovery tools.",
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Medicat Homepage Screenshot",
        },
      }}
    />

<!-- Matomo -->
<script>
  var _paq = window._paq = window._paq || [];
  /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
  _paq.push(['trackPageView']);
  _paq.push(['enableLinkTracking']);
  (function() {
    var u="//info.mon5termatt.com/";
    _paq.push(['setTrackerUrl', u+'matomo.php']);
    _paq.push(['setSiteId', '3']);
    var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
    g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
  })();
</script>
<noscript><p><img referrerpolicy="no-referrer-when-downgrade" src="//info.mon5termatt.com/matomo.php?idsite=3&amp;rec=1" style="border:0;" alt="" /></p></noscript>
<!-- End Matomo Code -->


  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <a href="https://url.medicatusb.com/jayroshop" target="_blank">
      <Picture
        src={BGC}
        widths={[100, 128, 192]}
        alt="Jayro Shop"
        class="left-0 bottom-0 fixed z-0 w-32 hover:animate-bob"
        loading="eager"
        format="avif"
      />
    </a>
    <a href="https://discord.gg/medicat" target="_blank">
      <Picture
        src={DiscordPeek}
        widths={[300]}
        alt="Join the Discord"
        class="right-0 bottom-0 fixed z-0 w-48 hover:animate-bob-reverse"
        loading="eager"
        format="avif"
      />
    </a>
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-3702581957889416"
     crossorigin="anonymous"></script>
  </body>
</html>
